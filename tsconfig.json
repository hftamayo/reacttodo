{
    "compilerOptions": {
      "baseUrl": ".",
      "paths": {
        "@/*": ["./src/*"],
        "@types/*": ["src/shared/types/*"],
        "@utils/*": ["src/shared/utils/*"],
      },
      "outDir": "./dist",
      "rootDir": "./src",
      "target": "es6",
      "module": "ESNext",
      "lib": ["dom", "es2015"],
      "jsx": "react-jsx",
      "strict": true,
      "moduleResolution": "node",
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "types": ["jest", "wouter", "react-aria-modal", "node"],
      "allowImportingTsExtensions": true,
      "noEmit": true 
    },
    "include": ["src"],
    "exclude": ["node_modules", "test", "dist"]
  }